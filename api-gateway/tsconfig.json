{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "types": ["node", "jest"], // Ensure "jest" is included here
    "typeRoots": ["./node_modules/@types", "./src/*"] // Default typeRoots for node_modules
  },
  "include": ["src/**/*"], // include in build
  "exclude": ["node_modules"]  // Exclude node_modules
}
